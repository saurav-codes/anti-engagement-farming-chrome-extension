{
  "manifest_version": 3,
  "name": "Anti-Engagement-Farm",
  "version": "1.0",
  "description": "Hide engagement-bait tweets on Twitter with one click and keep a log of what was removed.",

  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://your-backend.example.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}